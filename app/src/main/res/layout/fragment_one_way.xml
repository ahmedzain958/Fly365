<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".flightsearch.presentation.ui.fragment.OneWayFragment">

    <androidx.cardview.widget.CardView
            android:id="@+id/cityFromCard"
            android:elevation="@dimen/elevation_4dp"
            android:layout_width="@dimen/width_150dp"
            android:layout_margin="@dimen/margin_2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cityToCard"
            android:layout_height="@dimen/height_100dp"
            app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/textViewCityFrom"
                    android:textColor="@android:color/black"
                    tools:text="CAI"
                    style="@style/Title1Style"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/textViewCountryFrom"
                    android:textColor="@android:color/black"
                    tools:text="Cairo, Egypt"
                    style="@style/TextViewStyle"
                    app:layout_constraintTop_toBottomOf="@id/textViewCityFrom"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/cityToCard"
            android:layout_width="@dimen/width_150dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/margin_2dp"
            android:elevation="@dimen/elevation_4dp"
            app:layout_constraintStart_toEndOf="@id/cityFromCard"
            android:layout_height="@dimen/height_100dp"
            app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/textViewCityTo"
                    android:textColor="@android:color/black"
                    tools:text="CAI"
                    style="@style/Title1Style"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/textViewCountryTo"
                    android:textColor="@android:color/black"
                    tools:text="New, USA"
                    style="@style/TextViewStyle"
                    app:layout_constraintTop_toBottomOf="@id/textViewCityTo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
            android:src="@drawable/ic_repeat"
            android:layout_width="@dimen/width_56dp"
            android:elevation="@dimen/elevation_16dp"
            android:layout_height="@dimen/height_32dp"
            app:layout_constraintTop_toTopOf="@id/cityToCard"
            app:layout_constraintBottom_toBottomOf="@id/cityToCard"
            app:layout_constraintStart_toStartOf="@id/cityFromCard"
            app:layout_constraintEnd_toEndOf="@id/cityToCard"
            tools:layout_editor_absoluteX="141dp"
            android:id="@+id/imageView3"/>

</androidx.constraintlayout.widget.ConstraintLayout>