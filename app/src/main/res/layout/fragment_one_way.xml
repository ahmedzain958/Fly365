<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".flightsearch.presentation.ui.fragment.OneWayFragment">

    <androidx.cardview.widget.CardView
            android:id="@+id/cityOriginCard"
            android:elevation="@dimen/elevation_4dp"
            android:layout_width="@dimen/width_160dp"
            android:layout_margin="@dimen/margin_2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cityDestinationCard"
            android:layout_height="@dimen/height_130dp"
            app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/textViewOriginCity"
                    android:textColor="@android:color/black"
                    tools:text="CAI"
                    style="@style/Title1Style"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/textViewOriginAirport"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/textViewOriginAirport"
                    android:textColor="@color/colorMidGrey"
                    tools:text="Cairo, Egypt"
                    app:layout_constraintTop_toBottomOf="@id/textViewOriginCity"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="@dimen/size_10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/cityDestinationCard"
            android:layout_width="@dimen/width_160dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/margin_2dp"
            android:elevation="@dimen/elevation_4dp"
            app:layout_constraintStart_toEndOf="@id/cityOriginCard"
            android:layout_height="@dimen/height_130dp"
            app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/textViewDestinationCity"
                    android:textColor="@android:color/black"
                    tools:text="ASW"
                    app:layout_constraintVertical_chainStyle="packed"
                    style="@style/Title1Style"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/textViewDestinationAirport"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/textViewDestinationAirport"
                    android:textColor="@color/colorMidGrey"
                    tools:text="New, USA"
                    app:layout_constraintTop_toBottomOf="@id/textViewDestinationCity"
                    android:textSize="@dimen/size_10sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
            android:src="@drawable/ic_repeat"
            android:layout_width="@dimen/width_44dp"
            android:elevation="@dimen/elevation_16dp"
            android:layout_height="@dimen/height_24dp"
            android:layout_marginTop="@dimen/margin_48dp"
            android:background="@android:color/white"
            app:layout_constraintTop_toTopOf="@id/cityDestinationCard"
            app:layout_constraintStart_toStartOf="@id/cityOriginCard"
            app:layout_constraintEnd_toEndOf="@id/cityDestinationCard"
            tools:layout_editor_absoluteX="141dp"
            android:id="@+id/imageViewSwap"/>

</androidx.constraintlayout.widget.ConstraintLayout>